import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		Scanner scanner = new Scanner(System.in);
		
		System.out.println("Sayý giriniz: ");
		int sayi = scanner.nextInt();
		
		System.out.println(asalBul(sayi, sayi / 2));
	
		if (asalBul(sayi, sayi / 2) == 0) {
			System.out.println("Asal Deðil");
		} else if (asalBul(sayi, sayi/2) == 1) {
			System.out.println("1 girdiniz!");
		} 
		else {
		
			System.out.println("Asal");
		
		} 
	}

	
	static int asalBul(int s1, int s2) {
		if (s2==1){
            return 1;
        }else {
            if (s1%s2==0){
                return 0;
            }
            else return asalBul(s1,s2-1);
        }
	}
}


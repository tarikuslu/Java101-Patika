import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("Bir sayý giriniz: ");
		int sayi = scanner.nextInt();

		for(int i = 0; i < sayi; i++) {
			for(int j = 0; j<=i; j++ ) {
				System.out.print("\t*");
			}
			System.out.println();
		}
	}

}

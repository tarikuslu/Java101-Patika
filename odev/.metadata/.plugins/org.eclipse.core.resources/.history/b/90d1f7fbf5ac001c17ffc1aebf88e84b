import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("Mesafeyi km türünden giriniz");
		int km = scanner.nextInt();
		while (km <= 0) {
			System.out.println("KM Pozitif bir sayý olmalý!");
			km = scanner.nextInt();
		}
		
		System.out.println("Yaþýnýzý giriniz");
		int yas = scanner.nextInt();
		while (yas <= 0) {
			System.out.println("Yaþ Pozitif bir sayý olmalý!");
			yas = scanner.nextInt();
		}
		
		System.out.println("Yolculuk tipini giriniz 1/2");
		int tip = scanner.nextInt();
		while ((tip != 1) && (tip != 2)) {
			System.out.println("Yolculuk tipi 1/2 den baska olamaz");
		tip = scanner.nextInt();
		}
		
		double biletFiyatý = 0;
		if (yas < 12) {
			biletFiyatý -= biletFiyatý * 0.5;
		} else if (yas >=12 && yas < 24) {
			biletFiyatý -= biletFiyatý * 0.1;
		} else if (yas > 65) {
			biletFiyatý -= biletFiyatý * 0.3;
		} else {
			biletFiyatý *= 0.1;
		}
		
		if (tip == 2) {
			biletFiyatý -= biletFiyatý * 0.2;
		}
		
		System.out.println("Toplam tutar: " + biletFiyatý);
	}

}

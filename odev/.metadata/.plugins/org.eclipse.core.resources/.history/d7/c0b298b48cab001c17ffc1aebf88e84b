import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		double kmUcret = 2.20;
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("Taksi ile kaç km gidilecek?");
		double km = scanner.nextDouble();
		
		if (km * kmUcret < 20 && km * kmUcret > 0) {
			System.out.println("Ödenecek ücret 20TL");
		} else if(km * kmUcret > 0 && km * kmUcret >= 20) {
			System.out.println("Ödenecek ücret " + km * kmUcret);
		}
	}

}
